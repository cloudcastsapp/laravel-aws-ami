{
    "agent": {
        "metrics_collection_interval": 60,
        "region": "{{ aws_region }}",
        "logfile": "/var/log/amazon-cloudwatch-agent.log",
        "debug": false
    },
    "logs": {
        "logs_collected": {
            "files": {
                "collect_list": [
                    {
                        "file_path": "/home/ubuntu/laravel/storage/logs/laravel.log",
                        "log_group_name": "laravel-web",
                        "log_stream_name": "app-log-{hostname}",
                        "timestamp_format": "[%Y-%m-%d %H:%M:%S]",
                        "multi_line_start_pattern": "{timestamp_format}"
                    },
                    {
                        "file_path": "/var/log/nginx/access.log",
                        "log_group_name": "laravel-web",
                        "log_stream_name": "web-access-{hostname}",
                        "timestamp_format" :"[%d/%b/%Y:%H:%M:%S %z]"
                    },
                    {
                        "file_path": "/var/log/nginx/error.log",
                        "log_group_name": "laravel-web",
                        "log_stream_name": "web-error-{hostname}",
                        "timestamp_format" :"[%d/%b/%Y:%H:%M:%S %z]"
                    }
                ]
            }
        }
    }
}
